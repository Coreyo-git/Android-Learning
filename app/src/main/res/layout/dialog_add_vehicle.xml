<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">
    <EditText
        android:id="@+id/editTextVehicleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vehicle Name"/>

    <EditText
        android:id="@+id/editTextVehicleType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vehicle Type"/>

    <EditText
        android:id="@+id/editTextVehicleLicensePlate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vehicle License Plate"/>

    <EditText
        android:id="@+id/editTextVehicleSourcePlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Source Place"/>

    <EditText
        android:id="@+id/editTextVehicleDestinationPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Destination Place"/>

    <EditText
        android:id="@+id/editTextVehicleCurrentLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Current Location"/>

    <EditText
        android:id="@+id/editTextVehicleGoodsTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Goods Temperature"/>

    <EditText
        android:id="@+id/editTextVehicleFuelStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fuel Status"/>

</LinearLayout>